<p id="notice"><%= notice %></p>

<h1>Lista de clientes</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nombre cliente</th>
      <th>Documento fiscal</th>
      <th>Telefono</th>
      <th>Direccion</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.nombre_cliente %></td>
        <td><%= customer.documento_fiscal %></td>
        <td><%= customer.telefono %></td>
        <td><%= customer.direccion %></td>
        <td><%= customer.email %></td>
        <td><%= link_to 'Mostrar', customer %></td>
        <td><%= link_to 'Editar', edit_customer_path(customer) %></td>
        <td><%= link_to 'Eliminar', customer, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo cliente', new_customer_path, :class => "btn btn-default field_with_errors2" %>
